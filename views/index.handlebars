<h1>Burger Moderation Queue</h1>
<div class="container">
    <div class="row">

        {{!-- New Burger Input --}}
        <div class="col-6">
            <h3>Add new Burger:</h3>
            <form>
                <div class="form-group">
                    <label for="newBurgerIn">Burger</label>
                    <input type="email" class="form-control" id="newBurgerIn" aria-describedby="NewBurg"
                        placeholder="Double Bacon Cheeseburger">
                    <small id="NewBurg" class="form-text text-muted">What sounds delicious to you?</small>
                </div>
            </form>
        </div>

        {{!-- Interact with Existing Burgers  --}}
        <div class="col-6">
            <table>
                {{#each burgers}}
                <tr>
                    <td>
                        {{this.burger}}
                    </td>
                    <td>
                        <button id="eatBurger">Eat Burger</button>
                    </td>
                </tr>
                {{/each}}
            </table>
        </div>

    </div>
</div>

<script type="text/javascript" src="../public/homePage.js"></script>