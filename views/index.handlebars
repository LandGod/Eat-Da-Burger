<h1 class=" h1 mx-auto">Burger Moderation Queue</h1>
<div class="container">
    <div class="row">

        {{!-- New Burger Input --}}
        <div class="col-6">
            <h3>Add new Burger:</h3>
            <form>
                <div class="form-group">
                    <label for="newBurgerIn">Burger</label>
                    <input type="text" class="form-control" id="newBurgerIn" aria-describedby="NewBurg"
                        placeholder="Double Bacon Cheeseburger">
                    <small id="NewBurg" class="form-text text-muted">What sounds delicious to you?</small>
                </div>
                <button type="submit" id="createBurger">Create</button>
            </form>
        </div>

        {{!-- Interact with Existing Burgers  --}}
        <div class="col-6">
            <h3>View Burgers:</h3>
            {{#each unEatenBurgers}}
            <div class="row">
                <div class="col-4">
                    {{this.burgerInfo}}
                </div>
                <div class="col-2 py-1">
                    <button class="btn btn-sm btn-success eatBurgerButton" value='{{this.id}}'>Eat Burger</button>
                </div>
            </div>
            {{/each}}
            <hr>
            {{#each eatenBurgers}}
            <div class="row">
                <div class="col-4">
                    {{this.burgerInfo}}
                </div>
                <div class="col-2 py-1">
                    <button class=" btn btn-sm btn-secondary eatenBurgerButton" disabled>Eat Burger</button>
                </div>
            </div>
            {{/each}}
        </div>

    </div>
</div>

<script src="public/homePage.js" type="text/javascript"></script>